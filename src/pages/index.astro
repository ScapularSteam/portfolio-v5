---
import Default from "../templates/default.astro"
---

<html lang="en">
	<Default title="Home">
		<div class="flex h-screen flex-col lg:flex-row gap-40 ">
			<div class="flex flex-col justify-center lg:ml-16 lg:m-0 m-auto ">
				<h1 class="lg:w-2xl text-7xl p-4 font-DmSans tracking-wide text-white">hi there! I'm David_</h1>
				<p class="lg:w-2xl text-3xl p-4 font-DmSerif tracking-wide text-white">accidental hackathon organiser, student software engineer, co-founder @ youthacks.</p>
				<div class="flex flex-row mt-4">
					<a href="/" class="p-2 pl-8 pr-8 font-DmSans text-xl border-4 border-white rounded-4xl tracking-wide m-4 text-white">projects</a>
					<a href="/" class="p-2 pl-8 pr-8 font-DmSans text-xl border-4 border-white rounded-4xl tracking-wide m-4 text-white">linkedin</a>
				</div>
			</div>
			<div class="hidden lg:flex flex-col justify-center w-full">
				<div class="flex justify-center">
					<div class="grid grid-col-1 lg:grid-cols-2 grid-rows-3 justify-center w-fit ml-20 mt-20">

						<div class=" w-md h-70 -m-8 ">
							<img class="w-full h-full object-cover rounded-4xl shadow-2xl border-white border-4" src="/images/image1.png">
						</div>
						<div class="lg:col-start-2 lg:row-start-2 w-sm h-70 -m-24">
							<img class="h-full w-full object-cover rounded-4xl shadow-2xl border-white border-4" src="/images/image2.png">
						</div>
						<div class="lg:row-start-3 w-md h-60 -m-16">
							<img class="w-full h-full object-cover rounded-4xl shadow-2xl border-white border-4" src="/images/image3.png">
						</div>
					</div>
				</div>
			</div>
		</div>
	</Default>
</html>
